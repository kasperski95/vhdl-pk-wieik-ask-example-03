{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "./build.bat",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      
    },
    {
      "label": "Check syntax",
      "type": "shell",
      "command": "ghdl",
      "args": [
        "-s",
        "${file}"
      ],
      "presentation": {
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    }
  ]
}